<div class="container mt-5">
    <h2 class="text-center mb-4">Lab 3</h2>

    <form method="post" class="p-4 border rounded bg-light shadow-sm">
        <div class="mb-3">
            <label for="inputFilePath" class="form-label">Шлях до файлу введення:</label>
            <input type="text" name="inputFilePath" class="form-control" placeholder="Введіть шлях до файлу" required />
        </div>
        <div class="mb-3">
            <label for="outputFilePath" class="form-label">Шлях до файлу виведення:</label>
            <input type="text" name="outputFilePath" class="form-control" placeholder="Введіть шлях для збереження результату" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Запустити Lab3</button>
    </form>

    @if (ViewBag.ResultMessage != null)
    {
        <div class="alert alert-success mt-4">
            <p>@ViewBag.ResultMessage</p>
        </div>
        <div class="mt-3">
            <h4>Результат:</h4>
            <pre class="bg-dark text-light p-3 rounded">@ViewBag.OutputContent</pre>
        </div>
    }
</div>
